@model ML.Editorial
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js" type=”text/javascript”></script>
<script src="~/lib/jquery/dist/jquery.min.js" type=”text/javascript”></script>
<script type="text/javascript" src="~/js/AutorForm.js"></script>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Formulario Editorial</h2>
            <h5>Llena todos los campos y contesta para enviar el formulario</h5>
            <hr />
        </div>
    </div>
    @using (Html.BeginForm("Form", "Editorial", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-md-12">
                @Html.LabelFor(model => model.IdEditorial, new { @class = "visually-hidden" })
                @Html.TextBoxFor(model => model.IdEditorial, new { @class = "visually-hidden" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                @Html.LabelFor(model => model.Nombre)
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
            </div>
            <div class="col-md-5">
                @Html.LabelFor(model => model.InformacionAdicional)
                @Html.TextBoxFor(model => model.InformacionAdicional, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-5">
                @Html.LabelFor(model => model.Imagen)

                <input type="file" id="fuImagen" name="fuImagen" onchange="PreviewImagen(event)" />
                @if (Model.Imagen == null)
                {
                    <img src="https://th.bing.com/th/id/OIP.dhBwcZT_mUoZpOBSNsjHzgAAAA?rs=1&pid=ImgDetMain" id="imgAutor" style="  width:100px; height:100px; " />
                }
                else
                {

                    <img src="data:image/png;base64,@Convert.ToBase64String(Model.Imagen)" id="imgAutor" style="  width:100px; height:100px; " />

                }
                @Html.HiddenFor(model => model.Imagen)

            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <input type="submit" class="btn btn-success" value="@ViewBag.Accion" />
            </div>
            <div class="col-md-2">
                @Html.ActionLink(" Regresar", "GetAll", "Editorial", new { area = "" }, new { @class = "btn btn-danger bi bi-backspace" })
            </div>
        </div>
    }
</div>
