@model ML.Autor
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="StyleSheet" href=~/css/Botones.css type="text/css">

<script src="~/lib/jquery/dist/jquery.js" type=”text/javascript”></script>
<script src="~/lib/jquery/dist/jquery.min.js" type=”text/javascript”></script>
<script type="text/javascript" src="~/js/AutorForm.js"></script>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <center><h1 style="font-family:'Times New Roman'">Formulario Autor</h1></center>
            <br />
            <h5 style="font-family:Arial">Llena todos los campos y contesta para enviar el formulario</h5>
            <hr />
        </div>
    </div> 
    @using (Html.BeginForm("Form", "Autor", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form" }))
    {
        <center>
            <div class="container">
        <div class="row">
            <div class="col-md-12">
                @Html.LabelFor(model => model.IdAutor, new { @class = "visually-hidden" })
                @Html.TextBoxFor(model => model.IdAutor, new { @class = "visually-hidden" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-5">
                @Html.LabelFor(model => model.Nombre)
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control",@onkeypress = "return OnlyLetters(event)" , @id = "txtNombre" , @autocomplete = "password" })
                <label id="lblErrorNombre"></label>
            </div>
            <div class="col-md-5">
                @Html.LabelFor(model => model.InformacionAdicional)
                @Html.TextBoxFor(model => model.InformacionAdicional, new { @class = "form-control", @onkeypress = "return SizeInfo()", @id = "txtInfo", @autocomplete = "password" })
                <label id="lblErrorInfo"></label>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-5">
                @Html.LabelFor(model => model.Imagen)

                <input type="file" id="fuImagen" name="fuImagen" onchange="PreviewImagen(event)" />
                @if (Model.Imagen == null)
                {
                    <img src="https://th.bing.com/th/id/OIP.dhBwcZT_mUoZpOBSNsjHzgAAAA?rs=1&pid=ImgDetMain" id="imgAutor" style="  width:100px; height:100px; " />
                }
                else
                {

                    <img src="data:image/png;base64,@Convert.ToBase64String(Model.Imagen)" id="imgAutor" style="  width:100px; height:100px; " />

                }
                @Html.HiddenFor(model => model.Imagen)

            </div>
        </div>
        </div>
        <center>
        <div class="row">
            <div class="col-md-2">
                @* <input type="submit" class="btn btn-success" value="@ViewBag.Accion" /> *@
                <btn onclick="SendForm(event);" class="btn btn-success">@ViewBag.Accion</btn>
                
            </div>
            <div class="col-md-2">
                @Html.ActionLink(" Regresar", "GetAll", "Autor", new { area = "" }, new { @class = "btn btn-danger   bi bi-backspace" })
            </div>
        </div>
            </center>
            <br />
           <br />
           <br />
        </center>
        
    }

</div>

<footer>
    <marquee style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif"> _.- Biblioteca Anahuac    ...   ¡ Siguenos en nuestras Redes Sociales ! -._    ...  Twitter: Anahuac_BiblioTest   </marquee>
</footer>





<style>
    body {
        color: #000;
        overflow-x: hidden;
        height: auto;
        /* background: linear-gradient(#F1D8FB, #FCFAF2); */
        background-image: url(https://img.freepik.com/fotos-premium/libro-abierto-sobre-amarillo-vibrante-celebrando-alfabetizacion_818261-7589.jpg);
        background-size:cover;
        background-repeat: no-repeat;
        padding: 0 !important;
    }

    .container {
        padding-top: 20px;
        padding-bottom: 120px;
    }

</style>

