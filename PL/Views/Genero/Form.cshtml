@model ML.Genero
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="StyleSheet" href=~/css/Botones.css type="text/css">

<script src="~/lib/jquery/dist/jquery.js" type=”text/javascript”></script>
<script src="~/lib/jquery/dist/jquery.min.js" type=”text/javascript”></script>
<script type="text/javascript" src="~/js/GeneroForm.js"></script>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <center><h1 style="font-family">Formulario Genero</h1></center>
            <h5 style="font-family:Arial">Llena todos los campos y contesta para enviar el formulario</h5>
            <hr />
        </div>
    </div>
    @using (Html.BeginForm("Form", "Genero", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form" }))
    {
        <div class="row">
            <div class="col-md-12">
                @Html.LabelFor(model => model.IdGenero, new { @class = "visually-hidden" })
                @Html.TextBoxFor(model => model.IdGenero, new { @class = "visually-hidden" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                @Html.LabelFor(model => model.Nombre)
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control",@onkeypress = "return OnlyLetters(event)" , @id = "txtNombre" , @autocomplete = "password" })
                <label id="lblErrorNombre"></label>
            </div>
            <div class="col-md-5">
                @Html.LabelFor(model => model.Descripcion)
                @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" ,@onkeypress = "return SizeInfo()" , @id = "txtDescripcion" , @autocomplete = "password"})
                <label id="lblErrorDescripcion"></label>
            </div>
        </div>
        <br />
        
        <div class="row">
            <div class="col-md-2">
                @* <input type="submit" class="btn btn-success" value="@ViewBag.Accion" /> *@
                <btn onclick="SendForm(event);" class="btn btn-success">@ViewBag.Accion</btn>
            </div>
            <div class="col-md-2">
                @Html.ActionLink(" Regresar", "GetAll", "Genero", new { area = "" }, new { @class = "btn btn-danger bi bi-backspace" })
            </div>
        </div>
    }
</div>
<br />
<hr />

<footer>
    <marquee style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif"> _.- Biblioteca Anahuac    ...   ¡ Siguenos en nuestras Redes Sociales ! -._    ...  Twitter: Anahuac_BiblioTest   </marquee>
</footer>

<style>
    body {
        color: #000;
        overflow-x: hidden;
        height: auto;
        background-image: url(https://img.freepik.com/fotos-premium/libro-abierto-sobre-amarillo-vibrante-celebrando-alfabetizacion_818261-7589.jpg);
        background-size: cover;
        background-repeat: no-repeat;
        padding: 0 !important;
    }

    .container {
        padding-top: 20px;
        padding-bottom: 120px;
    }

</style>