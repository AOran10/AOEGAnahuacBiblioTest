@model ML.Idioma
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js" type=”text/javascript”></script>
<script src="~/lib/jquery/dist/jquery.min.js" type=”text/javascript”></script>
<script type="text/javascript" src="~/js/IdiomaForm.js"></script>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Formulario Idiomas</h2>
            <h5>Llena todos los campos y contesta para enviar el formulario</h5>
            <hr />
        </div>
    </div>
    @using (Html.BeginForm("Form", "Idioma", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form" }))
    {
        <div class="row">
            <div class="col-md-12">
                @Html.LabelFor(model => model.IdIdioma, new { @class = "visually-hidden" })
                @Html.TextBoxFor(model => model.IdIdioma, new { @class = "visually-hidden" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                @Html.LabelFor(model => model.Nombre)
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" , @onkeypress = "return OnlyLetters(event)" , @id = "txtNombre" , @autocomplete = "password"})
                <label id="lblErrorNombre"></label>
            </div>

        </div>
        <br />

        <div class="row">
            <div class="col-md-2">
                @* <input type="submit" class="btn btn-success" value="@ViewBag.Accion" /> *@
                <btn onclick="SendForm(event);" class="btn btn-success">@ViewBag.Accion</btn>
            </div>
            <div class="col-md-2">
                @Html.ActionLink(" Regresar", "GetAll", "Idioma", new { area = "" }, new { @class = "btn btn-danger bi bi-backspace" })
            </div>
        </div>
    }
</div>
