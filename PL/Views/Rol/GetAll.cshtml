
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="StyleSheet" href=~/css/Botones.css type="text/css">

<center>
<div class="container">
    <div class=row>
        <div class="text-center">
                <h1 style="font-family:'Times New Roman', Times, serif"> .♦️ Roles ♦️. </h1>
        </div>
        <div class="col-md-6 col-sm-12">
            <h2 style="font-family:'Times New Roman', Times, serif">Todos los Roles</h2>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <p style="font-family:Arial">Sí deseas Eliminar un Rol, preciona el Botón Rojo.
               Si deseas Editarlo preciona el Botón Amarillo.
               Si deseas Agregar uno Nuevo preciona el Botón + .
            </p>
            <hr />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div style="float:right;">
                @Html.ActionLink("+", "Form", "RoleController", htmlAttributes: new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
    <br />
    @if (Model != null)
    {
        <div class="row">
            <table class="table table-hover table-striped table-bordered table-responsive" id="table_usuarios">
                <thead>
                    <tr class="table-secondary">
                        <td style="display :none;">id</td>
                        <td>Asignar Rol</td>
                        <td>Nombre</td>
                        <td>Editar</td>
                        <td>Eliminar</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-info" href="@Url.Action("Asignar", "Rol", new { IdRole = role.Id, Name= role.Name})"><i class="bi bi-star-fill"></i></a></td>
                            <td style="display :none;">@role.Id </td>

                            <td>@role.Name</td>

                                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-warning" href="@Url.Action("Update", "Rol", new { IdRole = role.Id, Name= role.Name})"><i class="bi bi-tools"></i></a></td>
                            <td style="display :none;">@role.Id </td>

                                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-danger" href="@Url.Action("Delete", "Rol",  new { IdRole = role.Id })" onclick="return confirm('¿Estas Seguro que deseas Eliminar este Registro?');"><i class="bi bi-trash3"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>
</center>

<footer>
    <marquee style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif"> _.- Biblioteca Anahuac    ...   ¡ Siguenos en nuestras Redes Sociales ! -._    ...  Twitter: Anahuac_BiblioTest   </marquee>
</footer>

