
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
<div class="container">
    <div class=row>
        <div class="text-center">
            <h1 style="font-family:'Times New Roman', Times, serif">Roles</h1>
        </div>
        <div class="col-md-6 col-sm-12">
            <h2 style="font-family:'Times New Roman', Times, serif">Todos los Roles</h2>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <p style="font-family:Arial">Sí deseas Eliminar un Rol, preciona el Botón Rojo.
               Si deseas Editarlo preciona el Botón Amarillo.
               Si deseas Agregar uno Nuevo preciona el Botón + .
            </p>
            <hr />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div style="float:right;">
                @Html.ActionLink("+", "Form", "RoleController", htmlAttributes: new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
    <br />
    @if (Model != null)
    {
        <div class="row">
            <table class="table table-hover table-striped table-bordered table-responsive" id="table_usuarios">
                <thead>
                    <tr class="table-secondary">
                        <td style="display :none;">id</td>
                        <td>Asignar Rol</td>
                        <td>Nombre</td>
                        <td>Editar</td>
                        <td>Eliminar</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-info bi bi-star-fill" href="@Url.Action("Asignar", "Rol", new { IdRole = role.Id, Name= role.Name})"><i class="bi bi-pencil-square"></i></a></td>
                            <td style="display :none;">@role.Id </td>

                            <td>@role.Name</td>

                                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-warning bi bi-tools" href="@Url.Action("Update", "Rol", new { IdRole = role.Id, Name= role.Name})"><i class="bi bi-pencil-square"></i></a></td>
                            <td style="display :none;">@role.Id </td>

                                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-danger  bi bi-trash3" href="@Url.Action("Delete", "Rol",  new { IdRole = role.Id })" onclick="return confirm('¿Estas Seguro que deseas Eliminar este Registro?');"><i class="bi bi-eraser-fill"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>
</center>

